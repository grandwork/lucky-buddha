<%#= render "devise/shared/links" %>
<section>
	<div class="container">
	<%# unless user_signed_in? %>
		<div class="row">
		  <div class="col-md-6 col-sm-6 col-xs-12">
		    <img src="/assets/lucky-beer-bottel.png" alt="Lucky Beer Bottel" class="img-responsive mrg-btm30">
		  </div>
		  <div class="col-md-6 col-sm-6 col-xs-12">
		    <div class="white-bx">
		    	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class=>"form-horizontal",  :role=>"form"}) do |f| %>
		      <!--form class="form-horizontal" role="form"-->
		        <div class="form-group">
		          <div class="col-sm-2"></div>
		          <div class="col-sm-10">
		            <div class="title-txt">Login</div>
		          </div>
		        </div>
		        <div class="form-group">
		          <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
		          <div class="col-sm-10">
		            <!--input type="email" -->
		            <%= f.email_field :email, :class=>"form-control", :id=>"inputEmail3", :placeholder=>"Email", :autofocus => true %>
		          </div>
		        </div>
		        <div class="form-group">
		          <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
		          <div class="col-sm-10">
		            <!--input type="password" class="form-control" id="inputPassword3" placeholder="Password"-->
		            <%= f.password_field :password, :class=>"form-control", :id=>"inputPassword3", :placeholder=>"Password" %>
		          </div>
		        </div>
		        <% if devise_mapping.rememberable? -%>
    					<div class="form-group">
		          	<div class="col-sm-offset-2 col-sm-10">
		          		<%= f.check_box :remember_me %> <%= f.label :remember_me %>
		          	</div>
		          </div>
  					<% end -%>
		        <div class="form-group">
		          <div class="col-sm-offset-2 col-sm-10">
		            <!--a href="#">Forgot Password ?</a-->
		            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
		          </div>
		        </div>
		        <div class="form-group">
		          <div class="col-sm-offset-2 col-sm-10">
		          <button type="submit" class="btn btn-success">Sign in</button>|<%= link_to "Register", new_registration_path(resource_name), :class=>"btn btn-success" %>
		          </div>
		        </div>
		      <!--/form-->
		      <% end %>
		    </div>
		  </div>
		</div>
	<%# end %>
	</div>
</section>
