
<%#= render "devise/shared/links" %>
<section>
	<div class="container">
  	<div class="row">
    	<div class="col-md-6 col-sm-6 col-xs-12">
      	<img src="/assets/lucky-beer-bottel.png" alt="Lucky Beer Bottel" class="img-responsive mrg-btm30 center-block">
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12">
				<div class="white-bx mrg-btm30">
        <!--form class="form-horizontal" role="form"-->
	        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class=>"form-horizontal", :role=>"form"}) do |f| %>
	        	<%= devise_error_messages! %>
	        	<div class="form-group">
	          	<div class="col-sm-12">
	            	<div class="title-txt1">Selection Sunday is March 16th, Signup Today </div>
	            </div>
	          </div>
	          <div class="form-group">
	          	<label for="inputEmail3" class="col-sm-4 control-label">FIrst name</label>
	            <div class="col-sm-8">
	            <!--input type="text" class="form-control" id="" placeholder="First name"-->
	            	<%= f.text_field :first_name, :autofocus => true, :class=>"form-control", :id=>"", :placeholder=>"First name" %>
	           	</div>
	          </div>
	          <div class="form-group">
	          	<label for="inputPassword3" class="col-sm-4 control-label">Last name</label>
	            <div class="col-sm-8">
	            	<!--input type="text" class="form-control" id="" placeholder="Last name"-->
	            	<%= f.text_field :last_name, :class=>"form-control", :id=>"", :placeholder=>"Last name" %>
	            </div>
	          </div>
	          <div class="form-group">
	          	<label for="inputPassword3" class="col-sm-4 control-label">Email</label>
	            <div class="col-sm-8">
	            	<!--input type="text" class="form-control" id="" placeholder="Email"-->
	            	<%= f.email_field :email, :class=>"form-control", :id=>"", :placeholder=>"Email" %>
	            </div>
	          </div>
	          <div class="form-group">
	          	<label for="inputPassword3" class="col-sm-4 control-label">Password</label>
	            <div class="col-sm-8">
	            	<!--input type="password" class="form-control" id="" placeholder="Password"-->
	            <%= f.password_field :password, :class=>"form-control", :id=>"", :placeholder=>"Password" %>
	            </div>
	          </div>
	          <div class="form-group">
	          	<label for="inputPassword3" class="col-sm-4 control-label">Confirm Password</label>
	            <div class="col-sm-8">
	            	<!--input type="password" class="form-control" id="" placeholder="Confirm password"-->
	            	<%= f.password_field :password_confirmation, :class=>"form-control", :id=>"", :placeholder=>"Confirm password" %>
	            </div>
	          </div>
	          <div class="form-group">
	          	<label for="inputPassword3" class="col-sm-4 control-label">Date of Birth</label>
	            <div class="col-sm-8">
	            	<!--input type="text" class="form-control" id="" placeholder="DD/MM/YYYY"-->
	            	<%= f.text_field :date_of_birth, :class=>"form-control", :id=>"", :placeholder=>"MM/DD/YYYY" %>
	            </div>
	          </div>
	          <div class="form-group">
	          	<label for="inputPassword3" class="col-sm-4 control-label">Street Address</label>
	            <div class="col-sm-8">
	            	<!--textarea class="form-control" rows="2" placeholder="Enter address"></textarea-->
	            	<%= f.text_area :address, :rows=> 2, :class=>"form-control", :placeholder=>"Enter address"%>
	           	</div>
	          </div>

	          <div class="form-group">
	          	<label for="inputPassword3" class="col-sm-4 control-label">State</label>
	            <div class="col-sm-8">
	            	<%= f.text_field :state, :class=>"form-control", :id=>"", :placeholder=>"State" %>
	            </div>
	          </div>
	          
	          <div class="form-group">
	          	<label for="inputPassword3" class="col-sm-4 control-label">Zip</label>
	            <div class="col-sm-8">
	            	<!--input type="text" class="form-control" id="" placeholder="Enter zip"-->
	            	<%= f.text_field :zip, :class=>"form-control", :id=>"", :placeholder=>"Enter zip"%>
	            </div>
	          </div>
	          
	          <div class="form-group">
	          	<div class="col-sm-offset-4 col-sm-8">
	            	<div class="checkbox">
	      					<label>
	        					<!--input type="checkbox"> I agree with all <a href="#">Terms</a> &amp; <a href="#">Condition</a-->
	        					<%= f.check_box :terms_condition %>
	        					I have read and accept the <a href="#">Official Rules</a>
	      					</label>
	    					</div>
	            </div>
	          </div>
	          <div class="form-group mrg-btm0">
	          	<div class="col-sm-offset-4 col-sm-8">
	            	<button type="submit" class="btn btn-success">Register</button>
	            	<%#= f.submit 'Register', :class=>"btn btn-success"%>
	            </div>
	          </div>
	          <!--/form-->
	        <% end %>
      	</div>
    	</div>
  	</div>
	</div>
</section>
